<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendamentoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agendamento"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Data"
        android:inputType="date"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="66dp" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Horário"
        android:inputType="time"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="126dp" />


    <RadioButton
        android:id="@+id/idRBCartaoCredito"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:text="Cartão de crédito"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="491dp" />

    <RadioButton
        android:id="@+id/idRBCartaoDebito"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:text="Cartão de Debito"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="491dp" />

    <RadioButton
        android:id="@+id/idRBPix"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:text="Pix"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="556dp" />

    <RadioButton
        android:id="@+id/idRBDinheiro"
        android:layout_width="151dp"
        android:layout_height="39dp"
        android:text="Dinheiro"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="557dp" />


</androidx.constraintlayout.widget.ConstraintLayout>